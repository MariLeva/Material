<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="MyBaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">?colorPrimary</item>
        <item name="colorPrimaryVariant">?colorPrimaryVariant</item>
        <item name="colorOnPrimary">?colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">?colorSecondary</item>
        <item name="colorSecondaryVariant">?colorSecondaryVariant</item>
        <item name="colorOnSecondary">?colorOnSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textSize">@dimen/text_size</item>
        <item name="textInputStyle">@style/TextInputLayout</item>
        <item name="chipStyle">@style/ChipStyle</item>
        <item name="tabStyle">@style/MyTabLayout</item>
    </style>

    <style name="MyPinkTheme" parent="MyBaseTheme">
        <item name="colorPrimary">@color/pink_500</item>
        <item name="colorPrimaryVariant">@color/pink_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/pink_200</item>
        <item name="colorSecondaryVariant">@color/pink_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="boxStrokeColor">@color/pink_900</item>
        <item name="errorTextColor">#880E4F</item>
        <item name="chipBackgroundColor">@color/pink_200</item>
        <item name="rippleColor">@color/pink_500</item>
        <item name="background">@color/pink_50</item>
        <item name="backgroundSheetLayout">@color/pink_100</item>
        <item name="fontFamily">@font/chela_one</item>
    </style>

    <style name="MyBlueGreyTheme" parent="MyBaseTheme">
        <item name="colorPrimary">@color/blue_gray_500</item>
        <item name="colorPrimaryVariant">@color/blue_gray_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/blue_gray_200</item>
        <item name="colorSecondaryVariant">@color/blue_gray_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="boxStrokeColor">@color/blue_gray_900</item>
        <item name="errorTextColor">#880E4F</item>
        <item name="chipBackgroundColor">@color/blue_gray_200</item>
        <item name="rippleColor">@color/blue_gray_500</item>
        <item name="background">@color/blue_gray_50</item>
        <item name="backgroundSheetLayout">@color/blue_gray_100</item>
        <item name="fontFamily">@font/aclonica</item>
    </style>

    <style name="MyBrownTheme" parent="MyBaseTheme">
        <item name="colorPrimary">@color/brown_500</item>
        <item name="colorPrimaryVariant">@color/brown_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/brown_200</item>
        <item name="colorSecondaryVariant">@color/brown_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="boxStrokeColor">@color/brown_900</item>
        <item name="errorTextColor">#880E4F</item>
        <item name="chipBackgroundColor">@color/brown_200</item>
        <item name="rippleColor">@color/brown_500</item>
        <item name="background">@color/brown_50</item>
        <item name="backgroundSheetLayout">@color/brown_100</item>
        <item name="fontFamily">@font/griffy</item>
    </style>
</resources>